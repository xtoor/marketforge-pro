# Core Configuration
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Feature Toggles
ENABLE_BROKERS=false
ENABLE_RESONANCE=true
ENABLE_ML_STRATEGIES=true

# Resonance.ai Scanner Configuration
RESONANCE_HOST=http://localhost
RESONANCE_PORT=8001
RESONANCE_API_KEY=
RESONANCE_SCHEMA_VERSION=v13

# Broker API Keys (only used if ENABLE_BROKERS=true)
# Kraken
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# Coinbase
COINBASE_API_KEY=
COINBASE_API_SECRET=

# Binance
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Gemini
GEMINI_API_KEY=
GEMINI_API_SECRET=

# Default Data Sources (fallback when brokers disabled)
COINGECKO_API_KEY=
ALPHA_VANTAGE_API_KEY=

# TradingView Configuration
TRADINGVIEW_CHART_THEME=dark
TRADINGVIEW_LOCALE=en

# Performance Settings
MAX_CHART_CANDLES=5000
CHART_UPDATE_INTERVAL_MS=1000
ENABLE_CHART_CACHE=true
